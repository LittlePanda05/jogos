import random
from time import sleep

lista = ["SAIR    [0]", "PEDRA   [1]", "PAPEL   [2]" , "TESOURA [3]"]
def jogadas_pc():
  pc = random.randint(1,3)
  if pc == 1:
    print("o PC escolheu pedra")
  elif pc == 2:
    print("o PC escolheu papel")
  else:
    print("o PC escolheu tesoura")

for c in range(0,4):
  print(lista[c])

while True:
  jogador = int(input("Escolha um número para a batalha: "))
  if jogador == 0:
    print("A batalha foi adiada... Volte quando quiser! ")
    break
  pc = random.randint(1,3)
  print("JO")
  sleep(1)
  print("KEN")
  sleep(1)
  print("PÔ")
  sleep(1)
  jogadas_pc()
  if pc == jogador:
    print("A batalha foi tensa... não há ganhadores, nem perdedores. ")
  elif pc == 1:
    if jogador == 2:
        print("Papel embrulha a pedra e a plateia vai a loucuuuura... Você ganhou!")
    elif jogador == 3:
        print("A batalha foi travada... Pedra, a mais indestrutível dos concorrentes com um único golpe quebrou a tesoura. Você perdeu!")
  elif pc == 2:
    if jogador == 1:
      print("Papel embrulha a pedra e a plateia vai a loucuuuura... Você ganhou!")
    elif jogador ==3:
      print("o papel até tentou resistir... mas contra a mais afiada dos lutadores ele não da conta... Você perdeu")
  elif pc == 3:
    if jogador == 1:
       print("A batalha foi travada... Pedra, a mais indestrutível dos concorrentes com um único golpe quebrou a tesoura. Você perdeu!")
    elif jogador ==2:
      print("o papel até tentou resistir... mas contra a mais afiada dos lutadores ele não da conta... Você perdeu")
  print()
    
